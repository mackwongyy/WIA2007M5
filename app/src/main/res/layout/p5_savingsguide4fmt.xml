<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".P5_SavingsGuide4FMT"
    android:background="@drawable/background_image">

    <TextView
        android:id="@+id/FMTTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financial Management Tool"
        android:textAlignment="center"
        android:textColor="#014565"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <View
        android:id="@+id/SavingsGuideSubtitle"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@drawable/border4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />

    <TextView
        android:id="@+id/SavingsGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings Guide"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        tools:contentDescription="Tax Calculator"/>

    <View
        android:id="@+id/SavingsGuide4FMTView"
        android:layout_width="311dp"
        android:layout_height="477dp"
        android:background="@drawable/border8dp"
        android:fadingEdgeLength="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberOfMonthsSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Number of Months"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintTop_toTopOf="@+id/SavingsGuide4FMTView" />

    <EditText
        android:id="@+id/numberOfMonthsSelectedLabel"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:hint="Type a number..."
        android:inputType="number"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintTop_toBottomOf="@+id/numberOfMonthsSelected" />

    <TextView
        android:id="@+id/achievable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Achievable?"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintTop_toBottomOf="@+id/numberOfMonthsSelectedLabel" />

    <TextView
        android:id="@+id/achievableLabel"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:inputType="text"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintTop_toBottomOf="@+id/achievable"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintTop_toBottomOf="@+id/achievableLabel"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/amountLabel"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintTop_toBottomOf="@+id/descriptionLabel"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/amountDescription"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/SavingsGuide4FMTView"
        app:layout_constraintTop_toBottomOf="@+id/amountLabel"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SavingsGuide4FMTView" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/Apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SavingsGuide4FMTView" />

</androidx.constraintlayout.widget.ConstraintLayout>